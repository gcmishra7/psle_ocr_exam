# =============================================================================
# Enhanced OCR Parser with Multimodal AI Configuration
# =============================================================================

# =============================================================================
# PRIMARY AI CONFIGURATION (Required - at least one API key)
# =============================================================================

# Google Gemini API (Recommended - best for educational content)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-pro
GEMINI_TEMPERATURE=0.1
GEMINI_MAX_TOKENS=8192

# Llama Parse API (Advanced document parsing)
LLAMA_CLOUD_API_KEY=your_llama_cloud_api_key_here
LLAMA_PARSE_RESULT_TYPE=markdown
LLAMA_PARSE_LANGUAGE=english

# OpenAI API (Vision analysis)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_VISION_MODEL=gpt-4-vision-preview
OPENAI_MAX_TOKENS=1000

# Anthropic API (Optional - Claude models)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_PATH=./data/questions.db

# =============================================================================
# OCR CONFIGURATION
# =============================================================================
TESSERACT_PATH=/usr/bin/tesseract
OCR_LANGUAGE=eng

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_TITLE=Enhanced OCR Parser with Multimodal AI
APP_PORT=8501
DEBUG_MODE=False

# =============================================================================
# FILE PROCESSING CONFIGURATION
# =============================================================================
MAX_FILE_SIZE_MB=100
ALLOWED_EXTENSIONS=pdf

# =============================================================================
# MULTIMODAL PROCESSING CONFIGURATION
# =============================================================================
ENABLE_MULTIMODAL=True
AUTO_CLEANUP_REPROCESS=True
VISION_ANALYSIS_TIMEOUT=30
PROCESSING_TIMEOUT=600

# =============================================================================
# API KEY INSTRUCTIONS
# =============================================================================
# 
# How to get API keys:
# 
# 1. GEMINI_API_KEY (Recommended):
#    - Go to https://makersuite.google.com/app/apikey
#    - Sign in with Google account
#    - Create API key
#    - Best for: Question parsing, text analysis
# 
# 2. LLAMA_CLOUD_API_KEY (Advanced parsing):
#    - Go to https://cloud.llamaindex.ai
#    - Sign up for account
#    - Get API key from dashboard
#    - Best for: Complex document structure parsing
# 
# 3. OPENAI_API_KEY (Vision analysis):
#    - Go to https://platform.openai.com/api-keys
#    - Create account and add payment method
#    - Generate API key
#    - Best for: Image analysis, diagram understanding
# 
# 4. ANTHROPIC_API_KEY (Optional):
#    - Go to https://console.anthropic.com
#    - Create account
#    - Generate API key
#    - Best for: Alternative text analysis
# 
# =============================================================================
# RECOMMENDED MINIMAL SETUP
# =============================================================================
# For basic functionality, set at least:
# - GEMINI_API_KEY (for question parsing)
# 
# For enhanced functionality, also set:
# - LLAMA_CLOUD_API_KEY (for better document parsing)
# - OPENAI_API_KEY (for image analysis)
# 
# =============================================================================